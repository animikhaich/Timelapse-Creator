{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timelapse Creator",
  "version": "1.0.0",
  "identifier": "com.animikhaich.timelapse-creator",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Timelapse Creator",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright (c) 2024 Animikh Aich",
    "category": "Video",
    "shortDescription": "A fast and efficient timelapse creator",
    "longDescription": "A highly optimized desktop application for creating timelapses from videos with beautiful native UI. Supports batch processing with various speed multipliers.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["ffmpeg"]
      },
      "rpm": {
        "depends": ["ffmpeg"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "dialog": {},
    "shell": {
      "scope": [
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "args": true
        },
        {
          "name": "ffprobe",
          "cmd": "ffprobe",
          "args": true
        }
      ]
    }
  }
}
